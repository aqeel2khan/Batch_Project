<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_50sdp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/ll_notifi_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="#CCDEC1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/closePersonalInfo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_down" />

            <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/txt_start_date_plan"
                android:textColor="@color/welcome_txt"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>
        <!--            android:visibility="gone"
-->
        <LinearLayout
            android:id="@+id/ll_persona_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.dev.batchfinal.app_custom.MyCustomEditText
                android:id="@+id/edit_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/form_shape"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/outfit_regular"
                android:hint="@string/full_name"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_14sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/welcome_txt"
                android:textColorHighlight="@color/welcome_txt"
                android:textColorHint="@color/hint_txt_gry"
                android:textSize="@dimen/_12ssp"
                tools:ignore="TextFields" />

            <com.dev.batchfinal.app_custom.MyCustomEditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/form_shape"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/outfit_regular"
                android:hint="@string/txt_phone"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_14sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/welcome_txt"
                android:textColorHighlight="@color/welcome_txt"
                android:textColorHint="@color/hint_txt_gry"
                android:textSize="@dimen/_12ssp"
                tools:ignore="TextFields" />

            <com.dev.batchfinal.app_custom.MyCustomEditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/view_border_green"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/outfit_regular"
                android:hint="@string/email"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_14sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/welcome_txt"
                android:textColorHighlight="@color/welcome_txt"
                android:textColorHint="@color/hint_txt_gry"
                android:textSize="@dimen/_12ssp"
                tools:ignore="TextFields" />

            <com.dev.batchfinal.app_custom.MyCustomEditText
                android:id="@+id/edit_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/form_shape"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/outfit_regular"
                android:hint="@string/txt_dob"
                android:inputType="textMultiLine"
                android:padding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_14sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/welcome_txt"
                android:textColorHighlight="@color/welcome_txt"
                android:textColorHint="@color/hint_txt_gry"
                android:textSize="@dimen/_12ssp"
                tools:ignore="TextFields" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/radius_shape"
                android:backgroundTint="#F5F6F4"
                android:elevation="@dimen/_2sdp"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/im_gender"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/arrow_down" />

                <LinearLayout
                    android:id="@+id/ll_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:entries="@array/optionGender" />

                    <Spinner
                        android:id="@+id/text_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="Gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_following"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:text="Area"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <com.dev.batchfinal.app_custom.MyCustomEditText
                    android:id="@+id/edit_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/form_shape"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="State"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/welcome_txt"
                    android:textColorHighlight="@color/welcome_txt"
                    android:textColorHint="@color/hint_txt_gry"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />

                <com.dev.batchfinal.app_custom.MyCustomEditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/form_shape"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="City"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/welcome_txt"
                    android:textColorHighlight="@color/welcome_txt"
                    android:textColorHint="@color/hint_txt_gry"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />

                <com.dev.batchfinal.app_custom.MyCustomEditText
                    android:id="@+id/edit_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/form_shape"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="House #"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/welcome_txt"
                    android:textColorHighlight="@color/welcome_txt"
                    android:textColorHint="@color/hint_txt_gry"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />

                <com.dev.batchfinal.app_custom.MyCustomEditText
                    android:id="@+id/edit_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/form_shape"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="Street"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/welcome_txt"
                    android:textColorHighlight="@color/welcome_txt"
                    android:textColorHint="@color/hint_txt_gry"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />

                <com.dev.batchfinal.app_custom.MyCustomEditText
                    android:id="@+id/edit_avenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/form_shape"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="Avenue"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_12sdp"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/welcome_txt"
                    android:textColorHighlight="@color/welcome_txt"
                    android:textColorHint="@color/hint_txt_gry"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="Set default address"
                        android:textColor="@color/welcome_txt"
                        android:textSize="@dimen/_12ssp" />

                    <ToggleButton
                        android:id="@+id/toggleButton1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_select"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_delivery_place"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_home"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        app:cardBackgroundColor="#F1E6DA"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:padding="@dimen/_10sdp"
                            android:text="Home"
                            android:textAlignment="center"
                            android:textColor="@color/welcome_txt"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        app:cardBackgroundColor="#F5F6F4"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:padding="@dimen/_10sdp"
                            android:text="Work"
                            android:textAlignment="center"
                            android:textColor="@color/welcome_txt"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_notfy_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_all_notification"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <ToggleButton
                    android:id="@+id/toggle_all_notification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_select"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_training_notify"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <ToggleButton
                    android:id="@+id/toggle_training_notification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_select"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_live_stream_notify"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <ToggleButton
                    android:id="@+id/toggle_live_stream"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_select"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_meal_plan_notify"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <ToggleButton
                    android:id="@+id/toggle_meal_notification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_select"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.dev.batchfinal.app_custom.MyCustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/txt_delivery_notify"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />

                <ToggleButton
                    android:id="@+id/toggle_delivery_notification"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_select"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rectangle_button"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/outfit_regular"
            android:outlineSpotShadowColor="#516634"
            android:padding="@dimen/_3sdp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/view_apply"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/outfit_regular"
            android:outlineSpotShadowColor="#516634"
            android:padding="@dimen/_3sdp"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.dev.batchfinal.app_custom.MyCustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/outfit_regular"
            android:text="@string/txt_log_msg"
            android:textColor="@color/welcome_txt"
            android:textSize="@dimen/_14ssp" />

        <com.dev.batchfinal.app_custom.MyCustomBoldTextView
            android:id="@+id/txt_log_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/outfit_regular"
            android:text="@string/txt_log_content"
            android:textColor="@color/welcome_txt"
            android:textSize="@dimen/_10ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/rectangle_button"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/outfit_regular"
            android:outlineSpotShadowColor="#516634"
            android:padding="@dimen/_3sdp"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
