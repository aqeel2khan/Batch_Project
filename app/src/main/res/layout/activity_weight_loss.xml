<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dev.batchfinal.app_modules.activity.WeightLossActivity">

    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/black">

        <com.ct7ct7ct7.androidvimeoplayer.view.VimeoPlayerView
            android:id="@+id/vimeoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="true"
            app:showFullscreenOption="true"
            app:backgroundColor="#00FFFF"
            />



    </FrameLayout>
    <LinearLayout
        android:id="@+id/exercise_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/exercise_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/exercise_image" />



        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon"
            app:tint="@color/white" />

    </LinearLayout>


    <RelativeLayout
        android:layout_above="@id/ll_total_sybscribe"
        android:id="@+id/rel_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_image"
        android:layout_marginTop="-50dp"
        android:background="@drawable/rounded_bg_main">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                >

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/weight_loss_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Weight Loss"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_15ssp" />

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/dollerText"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="$35"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_10ssp" />

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/fromText"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/dollerText"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toLeftOf="@id/dollerText"
                    android:text="from"
                    android:textColor="#101215"
                    android:textSize="@dimen/_8ssp" />

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/messageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight_loss_text"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Our weight loss training plan is designed to help you reach your fitness goals through a combination of strength training, and cardiovascular exercise"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageText"
                    android:layout_marginTop="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/messageText"
                        android:src="@drawable/profile_image" />

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/txt_color"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Cameron Williasom" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_2sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">
                                <ImageView
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/accessibility" />
                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="20 trainings"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_2sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/clock" />

                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/_15_20_min"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_2sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:paddingHorizontal="@dimen/_2sdp">

                                <ImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/chat_icon" />

                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Beginner"
                                    android:id="@+id/txt_level"
                                    android:layout_marginStart="@dimen/_2sdp"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/accessibility" />

                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="yoga"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textSize="@dimen/_8sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_2sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/accessibility" />

                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="stretching"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textSize="@dimen/_8sdp"  />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_2sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_13sdp"
                                    android:layout_height="@dimen/_13sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/accessibility" />

                                <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="cardio"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textSize="@dimen/_8sdp"  />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/chat_icon" />

                                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                    android:id="@+id/level_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:fontFamily="@font/outfit_semi_bold"
                                    android:text="Beginner"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9ssp" />
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/work_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gry"
                    android:id="@+id/view2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/linearLayout2"/>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout2"
                    android:layout_marginTop="@dimen/_20sdp">

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/grantText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Today Exercise"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/rounded_all_sides"
                        android:backgroundTint="#F5F6F4">

                        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                            android:id="@+id/tv_exercise_day"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_6sdp"
                            android:layout_centerVertical="true"
                            android:text="day"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/welcome_txt_gry"
                            android:textSize="@dimen/_10sdp" />

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_6sdp"
                            android:entries="@array/week"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_below="@id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/gry2"/>

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/workout_text"
                    android:layout_below="@id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workouts"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workout_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:id="@+id/rvWorkoutDayWise"/>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_total_sybscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:fontFamily="@font/outfit_regular"
            android:outlineSpotShadowColor="#516634"
            android:padding="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textFontWeight="500"
            tools:ignore="UnusedAttribute"
            android:text="@string/txt_start_workout"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_8sdp">

            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:id="@+id/txt_change_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/txt_channge_course"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/terms_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>