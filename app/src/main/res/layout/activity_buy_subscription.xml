<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.activity.BuySubscriptionActivity">

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon" />

        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/outfit_bold"
            android:gravity="center"
            android:text="@string/txt_buy_subscription"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="@dimen/_16ssp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_55sdp"
        android:background="@drawable/rounded_bg_main">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_workout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/background_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exercise_image" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_85sdp"
                            android:background="@color/txt_light2"
                            android:padding="@dimen/_10sdp">

                            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                android:id="@+id/course_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/outfit_bold"
                                android:text="@string/txt_weight_loss"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />

                            <LinearLayout
                                android:id="@+id/workOutBath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:fontFamily="@font/outfit_medium"
                                    android:text="from"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:id="@+id/course_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/outfit_bold"
                                    android:text="$35"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14ssp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/workOutBatchRelative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/workOutBath"
                                android:layout_marginTop="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_marginEnd="@dimen/_3sdp"
                                        android:src="@drawable/flash_icon"
                                        app:tint="@color/white" />

                                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/outfit_semi_bold"
                                        android:text="131"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp"
                                        android:textStyle="bold" />

                                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                        android:id="@+id/tv_boost_kcal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:fontFamily="@font/outfit_medium"
                                        android:paddingLeft="@dimen/_2sdp"
                                        android:text="kcal"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9ssp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_14sdp"
                                        android:layout_marginEnd="@dimen/_3sdp"
                                        android:src="@drawable/clock"
                                        app:tint="@color/white" />

                                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                        android:id="@+id/tv_duration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:fontFamily="@font/outfit_semi_bold"
                                        android:text="93"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp"
                                        android:textStyle="bold" />

                                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                        android:id="@+id/tv_boost_min_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_1sdp"
                                        android:fontFamily="@font/outfit_medium"
                                        android:text="mins"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9ssp"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/workOutBatchRelative"
                                android:layout_marginTop="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/coach_profile"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/profile_image" />

                                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                    android:id="@+id/coach_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/outfit_semi_bold"
                                    android:text="Bessie Cooper"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_select_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_workout"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/icons" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:fontFamily="@font/outfit_bold"
                            android:text="@string/txt_plan_duration"
                            android:textColor="@color/welcome_txt"
                            android:textSize="@dimen/_14ssp" />

                        <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                            android:id="@+id/set_plan_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/outfit_semi_bold"
                            android:text=""
                            android:textColor="@color/welcome_txt_gry"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_select_plan"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@color/light_gry" />
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_total_sybscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/outfit_bold"
                    android:text="Grand total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/dollerText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/outfit_bold"
                    android:text="$35"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:backgroundTint="#516634"
                android:fontFamily="@font/outfit_semi_bold"
                android:text="@string/txt_check_out"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:id="@+id/txt_add_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/ll_total_sybscribe"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/outfit_semi_bold"
                android:gravity="center"
                android:text="@string/txt_add_pro"
                android:textColor="@color/terms_color"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>