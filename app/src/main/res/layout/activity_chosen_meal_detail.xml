<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.activity.ChosenMealDetailActivity">

    <LinearLayout
        android:id="@+id/exercise_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/meal_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon"
            app:tint="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_image"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_bg_main">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <com.example.bottomanimationmydemo.custom.MyCustomTextView
                    android:id="@+id/txt_chosen_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Smoked Salmon Toast"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />
                <RelativeLayout
                    android:id="@+id/rl_rating"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                        android:id="@+id/txt_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="4.8"
                        android:textColor="@color/welcome_txt"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/fromText"
                        android:layout_width="@dimen/_12ssp"
                        android:layout_height="@dimen/_12ssp"
                        android:layout_toEndOf="@id/txt_rating"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:src="@drawable/ic_star"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_rating"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:background="@drawable/radius_shape">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_14sdp">

                                <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="482"
                                    android:padding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:textColor="@color/welcome_txt"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.cardview.widget.CardView>
                            <com.example.bottomanimationmydemo.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Cal"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/hint_txt_gry"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:background="@drawable/radius_shape">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_14sdp">

                                <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="22g"
                                    android:padding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:textColor="@color/welcome_txt"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.cardview.widget.CardView>
                            <com.example.bottomanimationmydemo.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Protein"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/hint_txt_gry"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:background="@drawable/radius_shape">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_14sdp">

                                <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="46g"
                                    android:padding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:textColor="@color/welcome_txt"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.cardview.widget.CardView>
                            <com.example.bottomanimationmydemo.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Carbs"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center"
                                android:textColor="@color/hint_txt_gry"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:orientation="vertical"
                            android:background="@drawable/radius_shape">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_14sdp">

                                <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="28g"
                                    android:padding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:textColor="@color/welcome_txt"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.cardview.widget.CardView>
                            <com.example.bottomanimationmydemo.custom.MyCustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Fat"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/hint_txt_gry"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/linearLayout2"
                    android:id="@+id/rl_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">
                    <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                        android:id="@+id/txt_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Ingredients"
                        android:textColor="@color/welcome_txt"
                        android:textSize="@dimen/_12ssp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp">
                        <com.example.bottomanimationmydemo.custom.MyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_ingredient_1"
                            android:textColor="@color/welcome_txt_gry"
                            android:layout_marginEnd="@dimen/_19sdp"
                            android:textSize="@dimen/_12ssp"/>
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_done"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp">
                        <com.example.bottomanimationmydemo.custom.MyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_ingredient_2"
                            android:textColor="@color/welcome_txt_gry"
                            android:layout_marginEnd="@dimen/_19sdp"
                            android:textSize="@dimen/_12ssp"/>
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_done"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp">
                        <com.example.bottomanimationmydemo.custom.MyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_ingredient_3"
                            android:textColor="@color/welcome_txt_gry"
                            android:layout_marginEnd="@dimen/_19sdp"
                            android:textSize="@dimen/_12ssp"/>
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_done"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp">
                        <com.example.bottomanimationmydemo.custom.MyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_ingredient_4"
                            android:textColor="@color/welcome_txt_gry"
                            android:layout_marginEnd="@dimen/_19sdp"
                            android:textSize="@dimen/_12ssp"/>
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_done"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/rl_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reviews (127)"
                            android:fontFamily="@font/outfit_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/welcome_txt"
                            android:id="@+id/txt_review"/>
                        <com.example.bottomanimationmydemo.custom.MyCustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate Meal"
                            android:textColor="@color/terms_color"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/_12ssp"
                            android:id="@+id/txt_rate_meal"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_review_list"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>