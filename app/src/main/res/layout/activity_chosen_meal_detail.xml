<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.dev.batchfinal.view.activity.ChosenMealDetailActivity">

    <LinearLayout
        android:id="@+id/exercise_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/meal_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon"
            app:tint="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_image"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_bg_main">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <com.dev.batchfinal.custom.MyCustomTextView
                    android:id="@+id/txt_chosen_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoked Salmon Toast"
                    android:textColor="@color/welcome_txt"
                    android:textSize="@dimen/_12ssp" />
                <RelativeLayout
                    android:id="@+id/rl_rating"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.dev.batchfinal.custom.MyCustomBoldTextView
                        android:id="@+id/txt_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:text="4.8"
                        android:textColor="@color/welcome_txt"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/fromText"
                        android:layout_width="@dimen/_12ssp"
                        android:layout_height="@dimen/_12ssp"
                        android:layout_toEndOf="@id/txt_rating"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:src="@drawable/ic_star"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_rating"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_nutrition_list"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/linearLayout2"
                    android:id="@+id/rl_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">
                    <com.dev.batchfinal.custom.MyCustomBoldTextView
                        android:id="@+id/txt_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Ingredients"
                        android:textColor="@color/welcome_txt"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_ingredients_list"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>





                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/rl_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.dev.batchfinal.custom.MyCustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reviews (127)"
                            android:fontFamily="@font/outfit_regular"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/welcome_txt"
                            android:id="@+id/txt_review"/>
                        <com.dev.batchfinal.custom.MyCustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate Meal"
                            android:textColor="@color/terms_color"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/_12ssp"
                            android:id="@+id/txt_rate_meal"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_review_list"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"/>
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>