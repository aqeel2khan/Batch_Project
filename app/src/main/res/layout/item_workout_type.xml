<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/rectangle_button_gry"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/card_bg"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/gry_ractangle"
            android:gravity="center"
            >
            <com.dev.batchfinal.app_custom.MyCustomBoldTV
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="center"
                android:text="01"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8sdp">
            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:id="@+id/weight_loss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_extra_bold"
                android:text="Lower-Body Burn"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/welcome_txt"
                android:textFontWeight="500"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/ll_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp">
                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/flash_icon"/>
                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_boost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="131"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/gry"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12ssp" />
                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_boost_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text=" kcal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/clock"
                        app:tint="@color/terms_color" />
                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_boost_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="93"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/gry"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12ssp" />
                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_boost_min_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text=" mins"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>