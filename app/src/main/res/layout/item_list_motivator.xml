<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_2sdp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_trainer_profile"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center"
        android:src="@drawable/normal_boy"
        app:civ_border_color="@color/white"
        android:scaleType="centerCrop"
        app:civ_border_width="0.5dp"
        app:civ_circle_background_color="@color/gry2" />

    <com.dev.batchfinal.app_custom.MyCustomBoldTV
        android:id="@+id/txt_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Bessie Cooper"
        android:textColor="@color/welcome_txt"
        android:textSize="@dimen/_12sdp"
       />

    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
        android:id="@+id/txt_profesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Yoga, pilates"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal" />

</LinearLayout>