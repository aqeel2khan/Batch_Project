<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="@dimen/_2sdp"
    android:padding="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_trainer_profile"
        app:civ_border_color="@color/white"
        app:civ_circle_background_color="@color/gry2"
        app:civ_border_width="2dp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/normal_boy" />

    <com.example.bottomanimationmydemo.custom.MyCustomTextView
        android:id="@+id/txt_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Bessie Cooper"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/welcome_txt"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

    <com.example.bottomanimationmydemo.custom.MyCustomTextView
        android:id="@+id/txt_profesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Yoga, pilates"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal" />

</LinearLayout>