<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    android:elevation="@dimen/_2sdp"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_trainer_profile"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/normal_boy"
        app:civ_border_color="@color/white"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/gry2" />

    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
        android:id="@+id/txt_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Bessie Cooper"
        android:fontFamily="@font/outfit_bold"
        android:textColor="@color/welcome_txt"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
        android:id="@+id/txt_profesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Yoga, pilates"
        android:fontFamily="@font/outfit_semi_bold"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal" />

</LinearLayout>