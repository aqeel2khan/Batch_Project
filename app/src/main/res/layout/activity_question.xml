<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.dev.batchfinal.app_modules.question.view.QuestionActivity">

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_15sdp">

            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/txt_questionnaire"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:id="@+id/im_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="5/7"
                android:textColor="@color/welcome_txt"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_main">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/sel_circle" />

            <RelativeLayout
                android:id="@+id/rlLine1"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/sel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />

            <RelativeLayout
                android:id="@+id/rlLine2"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/unsel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />
            <RelativeLayout
                android:id="@+id/rlLine3"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/unsel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />
            <RelativeLayout
                android:id="@+id/rlLine4"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/unsel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image5"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />
            <RelativeLayout
                android:id="@+id/rlLine5"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/unsel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image6"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />
            <RelativeLayout
                android:id="@+id/rlLine6"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/unsel_line_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image7"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/unsel_circle" />


        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/fitness_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_fitness"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_above="@id/btn_next1"
                android:orientation="vertical">
                <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_fitness_goal"
                    android:textColor="@color/welcome_txt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_15ssp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_meal_goals"
                    android:layout_marginTop="@dimen/_20sdp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/outfit_regular"
                android:outlineSpotShadowColor="#516634"
                android:text="@string/txt_back_to_meal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_your_age"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_age"
                android:textColor="@color/welcome_txt"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_15ssp"/>
            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/outfit_regular"
                android:outlineSpotShadowColor="#516634"
                android:text="@string/txt_next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>
        <!--height code-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ll_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_height"
                android:textColor="@color/welcome_txt"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/header"
                android:textSize="@dimen/_15ssp"/>

            <com.dev.batchfinal.app_utils.RulerView
                android:id="@+id/height_ruler"
                android:layout_width="120dp"
                android:layout_height="500dp"
                android:background="@color/search_color"
                android:layout_above="@id/ll_tab_layout"
                android:layout_below="@id/header"
                android:layout_centerInParent="true"
                app:rulerColor="@color/welcome_txt_gry"
                app:rulerDivideByFiveHeight="30dp"
                app:rulerDivideByFiveWidth="2dp"
                app:rulerDivideByTenHeight="40dp"
                app:rulerDivideByTenWidth="2dp"
                app:rulerHighlightColor="#D81111"
                app:rulerIntervalDistance="8dp"
                app:rulerIntervalValue="0.1"
                app:rulerIsDivideByFive="true"
                app:rulerIsDivideByTen="true"
                app:rulerLineHeight="20dp"
                app:rulerLineWidth="1dp"
                app:rulerMaxValue="300"
                app:rv_defaultValue="150"
                app:rulerMinValue="40"
                app:rulerOrientation="vertical"
                app:rulerRetainLength="1"
                app:rulerTextBaseLineDistance="3dp"
                app:rulerTextColor="@android:color/black"
                app:rulerTextSize="15sp" />
            <com.dev.batchfinal.app_utils.RulerView
                android:id="@+id/height_feet_ruler"
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="500dp"
                android:background="@color/search_color"
                android:layout_above="@id/ll_tab_layout"
                android:layout_below="@id/header"
                android:layout_centerInParent="true"
                app:rulerColor="@color/welcome_txt_gry"
                app:rulerDivideByFiveHeight="30dp"
                app:rulerDivideByFiveWidth="2dp"
                app:rulerDivideByTenHeight="40dp"
                app:rulerDivideByTenWidth="2dp"
                app:rulerHighlightColor="#D81111"
                app:rulerIntervalDistance="8dp"
                app:rulerIntervalValue="0.1"
                app:rulerIsDivideByFive="true"
                app:rulerIsDivideByTen="true"
                app:rulerLineHeight="20dp"
                app:rulerLineWidth="1dp"
                app:rulerMaxValue="9.84"
                app:rv_defaultValue="5.4"
                app:rulerMinValue="1.64"
                app:rulerOrientation="vertical"
                app:rulerRetainLength="1"
                app:rulerTextBaseLineDistance="3dp"
                app:rulerTextColor="@android:color/black"
                app:rulerTextSize="15sp" />
            <LinearLayout
                android:id="@+id/ll_tab_layout"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_2sdp"
                android:layout_above="@id/btn_next3"
                android:background="@drawable/cmfeet_bg"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_cm"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/demo_wt"
                    android:gravity="center">

                    <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                        android:id="@+id/tv_cm"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="cm"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/welcome_txt"
                        android:fontFamily="@font/outfit_regular"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_feet"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_feet"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="feet"
                        android:textColor="@color/welcome_txt_gry"
                        android:fontFamily="@font/outfit_regular"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/outfit_regular"
                android:outlineSpotShadowColor="#516634"
                android:text="@string/txt_next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>
<!--weight-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ll_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_weight"
                android:textColor="@color/welcome_txt"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/header_weight"
                android:textSize="@dimen/_15ssp"/>

            <LinearLayout
                android:layout_below="@id/header_weight"
                android:id="@+id/ll_current_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Weight"
                        android:layout_centerVertical="true"
                        android:textColor="@color/welcome_txt"
                        android:id="@+id/current_weight"
                        android:textSize="@dimen/_12ssp"/>
                    <LinearLayout
                        android:id="@+id/ll_kg_lbs"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/_2sdp"
                        android:background="@drawable/cmfeet_bg"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_kg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/demo_wt"
                            android:gravity="center">

                            <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                                android:id="@+id/tv_kg"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:text="kg"
                                android:padding="@dimen/_5sdp"
                                android:textAlignment="center"
                                android:textColor="@color/welcome_txt"
                                android:fontFamily="@font/outfit_regular"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_lbs"
                            android:layout_width="20dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_2ssp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.dev.batchfinal.app_custom.MyCustomLightTextView
                                android:id="@+id/tv_lbs"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="lbs"
                                android:textColor="@color/welcome_txt_gry"
                                android:fontFamily="@font/outfit_regular"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <com.dev.batchfinal.app_custom.RulerView
                    android:id="@+id/ruler2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/search_color"
                    app:rv_alphaEnable="false"
                    app:rv_indcatorColor="@color/black"
                    app:rv_indcatorType="line"
                    app:rv_indcatorWidth="3dp"
                    app:rv_itemSpacing="8dp"
                    app:rv_maxLineColor="@color/welcome_txt_gry"
                    app:rv_maxLineHeight="30dp"
                    app:rv_maxLineWidth="3dp"
                    app:rv_middleLineColor="@color/welcome_txt"
                    app:rv_middleLineHeight="20dp"
                    app:rv_middleLineWidth="2dp"
                    app:rv_minLineColor="@color/gry"
                    app:rv_minLineHeight="10dp"
                    app:rv_minLineWidth="1dp"
                    app:rv_resultTextColor="@color/black"
                    app:rv_resultTextSize="20sp"
                    app:rv_scaleTextColor="@color/welcome_txt_gry"
                    app:rv_scaleTextSize="15sp"
                    app:rv_strokeCap="round"
                    app:rv_unitTextColor="@color/search_color"
                    app:rv_unitTextSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/ll_current_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Weight"
                        android:layout_centerVertical="true"
                        android:textColor="@color/welcome_txt_gry"
                        android:id="@+id/target_weight"
                        android:textSize="@dimen/_11ssp"/>
                    <LinearLayout
                        android:id="@+id/ll_lbs_lbs"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/_2sdp"
                        android:background="@drawable/cmfeet_bg"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_tr_kg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/demo_wt"
                            android:gravity="center">

                            <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                                android:id="@+id/tv_tr_kg"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:text="kg"
                                android:padding="@dimen/_5sdp"
                                android:textAlignment="center"
                                android:textColor="@color/welcome_txt"
                                android:fontFamily="@font/outfit_regular"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tr_lbs"
                            android:layout_width="20dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_2ssp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                                android:id="@+id/tv_tr_lbs"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:text="lbs"
                                android:textColor="@color/welcome_txt_gry"
                                android:fontFamily="@font/outfit_regular"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <com.dev.batchfinal.app_custom.RulerView
                    android:id="@+id/target_ruler"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/search_color"
                    app:rv_alphaEnable="false"
                    app:rv_indcatorColor="@color/black"
                    app:rv_indcatorType="line"
                    app:rv_indcatorWidth="3dp"
                    app:rv_itemSpacing="8dp"
                    app:rv_maxLineColor="@color/welcome_txt_gry"
                    app:rv_maxLineHeight="30dp"
                    app:rv_maxLineWidth="3dp"
                    app:rv_middleLineColor="@color/welcome_txt"
                    app:rv_middleLineHeight="20dp"
                    app:rv_middleLineWidth="2dp"
                    app:rv_minLineColor="@color/gry"
                    app:rv_minLineHeight="10dp"
                    app:rv_minLineWidth="1dp"
                    app:rv_resultTextColor="@color/black"
                    app:rv_resultTextSize="20sp"
                    app:rv_scaleTextColor="@color/welcome_txt_gry"
                    app:rv_scaleTextSize="15sp"
                    app:rv_strokeCap="round"
                    app:rv_unitTextColor="@color/search_color"
                    app:rv_unitTextSize="15sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/outfit_regular"
                android:outlineSpotShadowColor="#516634"
                android:text="@string/txt_next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/active_you_are"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.dev.batchfinal.app_custom.MyCustomSemiBoldTV
                    android:layout_width="match_parent"
