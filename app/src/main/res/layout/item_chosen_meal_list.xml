<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.dev.batchfinal.app_custom.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:fontFamily="@font/outfit_regular"
        android:textSize="@dimen/_13ssp"
        android:textFontWeight="500"
        android:id="@+id/txt_meal_name"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_employee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        app:cardBackgroundColor="@color/search_color"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_employee_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_lunch_dmy"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_8sdp">
                <com.dev.batchfinal.app_custom.MyCustomTextView
                    android:id="@+id/weight_loss_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_extra_bold"
                    android:text="Smoked Salmon Toast"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp">
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/flash_icon"/>
                        <com.dev.batchfinal.app_custom.MyCustomTextView
                            android:id="@+id/tv_boost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="1700-1800"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:textFontWeight="500"
                            android:textSize="@dimen/_10ssp" />
                        <com.dev.batchfinal.app_custom.MyCustomTextView
                            android:id="@+id/tv_boost_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text=" kcal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>