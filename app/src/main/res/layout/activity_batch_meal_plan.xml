<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.dev.batchfinal.app_modules.activity.CurrentMealDetailActivity">

    <LinearLayout
        android:id="@+id/exercise_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/meal_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/app_back_icon"
            app:tint="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_image"
        android:layout_above="@id/rl_bottom_layout"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_bg_main">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <com.dev.batchfinal.app_custom.MyCustomTextView
                    android:id="@+id/weight_loss_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Batch Vegan Meal Plan"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_12ssp" />

                <com.dev.batchfinal.app_custom.MyCustomTextView
                    android:id="@+id/dollerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/outfit_regular"
                    android:text="$35"
                    android:textColor="@color/welcome_txt"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_10ssp" />

                <com.dev.batchfinal.app_custom.MyCustomTextView
                    android:id="@+id/fromText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/dollerText"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toLeftOf="@id/dollerText"
                    android:text="from"
                    android:textColor="#101215"
                    android:textSize="@dimen/_8ssp" />

                <com.dev.batchfinal.app_custom.MyCustomTextView
                    android:id="@+id/messageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight_loss_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/txt_meal_content"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/flash_icon"
                                    app:tint="@color/welcome_txt" />

                                <com.dev.batchfinal.app_custom.MyCustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1700-1800 kcl"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/meal_sm_icon"
                                    app:tint="@color/welcome_txt" />

                                <com.dev.batchfinal.app_custom.MyCustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="3-4 meals"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/radius_shape">

                            <LinearLayout
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_vegan" />

                                <com.dev.batchfinal.app_custom.MyCustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Vegan"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_8ssp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gry2"
                    android:id="@+id/view2"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_below="@id/linearLayout2"/>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout2"
                    android:layout_marginTop="@dimen/_25sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.dev.batchfinal.app_custom.MyCustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Duration"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />
                        <com.dev.batchfinal.app_custom.MyCustomTextView
                            android:id="@+id/grantText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="On May 18, the plan will be suspened"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/welcome_txt_gry"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/radius_shape"
                        android:backgroundTint="#F5F6F4">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_6sdp"
                            android:entries="@array/week"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_below="@id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/gry2"/>

                <RelativeLayout
                    android:id="@+id/ll_meal_cald"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/view1">
                    <com.dev.batchfinal.app_custom.MyCustomTextView
                        android:id="@+id/workout_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Meals"
                        android:layout_centerVertical="true"
                        android:textColor="@color/welcome_txt"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_12ssp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/meal_calender"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/meal_cald"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_meal_plan"
                    android:layout_below="@+id/ll_meal_cald"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_10sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_all_meal"
                    android:layout_below="@id/recycler_meal_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp" />
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_main">
        <com.dev.batchfinal.app_custom.MyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand total"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/welcome_txt"/>
        <com.dev.batchfinal.app_custom.MyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$35"
            android:id="@+id/selected_item"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textSize="@dimen/_14ssp"
            android:layout_alignParentRight="true"
            android:textColor="@color/welcome_txt"/>

        <Button
            android:id="@+id/btn_subscribe_plan"
            android:layout_below="@id/selected_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rectangle_button"
            android:fontFamily="@font/outfit_regular"
            android:outlineSpotShadowColor="#516634"
            android:text="@string/subscribe_for_a_plan"
            android:textSize="@dimen/_12ssp"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />

        <com.dev.batchfinal.app_custom.MyCustomTextView
            android:id="@+id/txt_add_promo"
            android:layout_below="@id/btn_subscribe_plan"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/txt_add_pro"
            android:textStyle="bold"
            android:textColor="@color/terms_color"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>


</RelativeLayout>