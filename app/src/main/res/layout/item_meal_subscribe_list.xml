<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_current_meal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/meal_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.bottomanimationmydemo.custom.MyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/outfit_regular"
                android:background="@drawable/radius_shape"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/meal_batch"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_70sdp"
                android:background="@color/txt_light2"
                android:padding="@dimen/_10sdp">

                <com.example.bottomanimationmydemo.custom.MyCustomTextView
                    android:id="@+id/tv_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_meal_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textFontWeight="500"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/mealBath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <com.example.bottomanimationmydemo.custom.MyCustomTextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/14"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white" />
                    <com.example.bottomanimationmydemo.custom.MyCustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="days"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"/>
                </LinearLayout>
                <com.example.bottomanimationmydemo.custom.MyCustomTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:layout_below="@id/mealBath"
                    android:layout_marginTop="@dimen/_7sdp"/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>