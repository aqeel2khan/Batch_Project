<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_current_meal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/meal_bg" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/radius_shape"
                android:padding="@dimen/_5sdp"
                android:text="@string/meal_batch"
                android:textColor="@color/welcome_txt"
                android:textSize="@dimen/_8sdp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/layer_overlaped"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_8sdp">

                <com.dev.batchfinal.app_custom.MyCustomBoldTV
                    android:id="@+id/tv_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_meal_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    />

                <LinearLayout
                    android:id="@+id/mealBath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/14"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white" />
                    <com.dev.batchfinal.app_custom.MyCustomLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="days"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"/>
                </LinearLayout>
                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_below="@id/mealBath"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>