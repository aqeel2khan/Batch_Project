<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_40sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/week_layout"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_days"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_txt_gry"
        tools:text="Mon"
        android:textSize="@dimen/_10ssp"/>
    <com.example.bottomanimationmydemo.custom.MyCustomTextView
        android:id="@+id/tv_date"
        android:layout_below="@id/tv_days"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/welcome_txt"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="23" />
    
    <ImageView
        android:id="@+id/cal_meal"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        android:src="@drawable/dr_circle"
        android:layout_below="@id/tv_date"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>