<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/infoHeader"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/terms_color"
            >
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_8sdp"
                android:src="@drawable/ic_baseline_info"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtInformation"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Information"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alertMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoHeader"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:lineSpacingExtra="0.6dp"
            android:text="Lorem Ipsum Doller"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_okay"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_below="@id/alertMessage"
            android:layout_alignParentEnd="true"

            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_60sdp"

            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:text="Okay"
            android:textAllCaps="false"
            android:textColor="@color/terms_color"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

    </RelativeLayout>

</LinearLayout>