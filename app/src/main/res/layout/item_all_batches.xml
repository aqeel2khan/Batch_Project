<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  <ImageView
          android:layout_width="@dimen/_300sdp"
          android:layout_height="@dimen/_300sdp"
          android:id="@+id/img_2"/>-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
       android:layout_marginHorizontal="@dimen/_8sdp"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_17sdp"
        app:cardElevation="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/food" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <!--current batch xml-->
            <com.dev.batchfinal.app_custom.MyCustomBoldTV
                android:id="@+id/workout_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/radius_shape"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/current_batch"
                android:textColor="@color/welcome_txt"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                />
<!--
            android:background="@color/txt_light2"
                            android:background="@drawable/ic_layer_workout_batch"

-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/layer_overlaped"
                android:padding="@dimen/_8sdp">

                <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workout_batch"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:id="@+id/workOutBath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <com.dev.batchfinal.app_custom.MyCustomLightTextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="from "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        />

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/tv_course_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$35"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workOutBatchRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workOutBath"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/streat" />

                        <com.dev.batchfinal.app_custom.MyCustomLightTextView
                            android:id="@+id/work_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_Stretching"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/clock"
                            app:tint="@color/white"/>

                        <com.dev.batchfinal.app_custom.MyCustomLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="from 1 week"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"

                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bar_chart" />

                        <com.dev.batchfinal.app_custom.MyCustomLightTextView
                            android:id="@+id/level_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:fontFamily="@font/outfit_medium"
                            android:text="Beginner"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                             />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workOutBatchRelative">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/coach_profile"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_image" />

                    <com.dev.batchfinal.app_custom.MyCustomMediumTextView
                        android:id="@+id/coach_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Bessie Cooper"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                         />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_below="@id/linearLayout"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:indeterminate="false"
                    android:max="50"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/thumb"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>