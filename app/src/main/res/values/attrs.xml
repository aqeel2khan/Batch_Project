<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ChipNavigationBar">
        <attr format="color" name="colorAccent"/>
        <attr name="cnb_menuResource" format="reference" />
        <attr name="cnb_minExpandedWidth" format="dimension" />
        <attr name="cnb_addBottomInset" format="boolean" />
        <attr name="cnb_addTopInset" format="boolean" />
        <attr name="cnb_addLeftInset" format="boolean" />
        <attr name="cnb_addRightInset" format="boolean" />
        <attr name="cnb_orientationMode">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="cnb_badgeColor" format="color" />
        <attr name="cnb_unselectedColor" format="color" />
        <attr name="cnb_radius" format="dimension" />
        <attr name="cnb_textAppearance" format="reference" />
        <attr name="cnb_iconSize" format="dimension" />
        <attr name="cnb_animationDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ChipMenuItem">
        <attr name="android:id" />
        <attr name="android:title" />
        <attr name="android:icon" />
        <attr name="android:enabled" />
        <attr name="android:contentDescription" />
        <attr name="cnb_iconColor" format="color" />
        <attr name="cnb_iconTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
        </attr>
        <attr name="cnb_textColor" format="color" />
        <attr name="cnb_backgroundColor" format="color" />
    </declare-styleable>

    <!-- simpleRulerView-->
    <declare-styleable name="customRulerView">

        <attr name="rulerOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="rulerHighlightColor" format="color|reference" />
        <attr name="rulerColor" format="color|reference" />
        <attr name="rulerTextColor" format="color|reference" />

        <attr name="rulerIntervalDistance" format="dimension" />
        <attr name="rulerLineWidth" format="dimension" />
        <attr name="rulerLineHeight" format="dimension" />
        <attr name="rulerTextSize" format="dimension" />
        <attr name="rulerTextBaseLineDistance" format="dimension" />

        <attr name="rulerIsDivideByTen" format="boolean" />
        <attr name="rulerDivideByTenHeight" format="dimension" />
        <attr name="rulerDivideByTenWidth" format="dimension" />

        <attr name="rulerIsDivideByFive" format="boolean" />
        <attr name="rulerDivideByFiveHeight" format="dimension" />
        <attr name="rulerDivideByFiveWidth" format="dimension" />


        <attr name="rulerIntervalValue" format="float" />
        <attr name="rulerMaxValue" format="float" />
        <attr name="rulerMinValue" format="float" />

        <attr name="rulerRetainLength" format="integer" />
    </declare-styleable>

</resources>